@model AddComplaintViewModel
@{
    ViewData["Title"] = "شکایت";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="alert-info mt-4">
                <h4>@ViewBag.error</h4>
            </div>
            <!-- Material form register -->
            <div class="card mt-5 mb-5">

                <h5 class="card-header font primary-color white-text text-center py-4">
                    <strong>ثبت شکایت</strong>
                </h5>

                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">

                    <!-- Form -->
                    <form class="text-center" asp-controller="Home" asp-action="Complaint" style="color: #757575;">

                        <div class="row mt-3">
                            <div class="form-group col-6">
                                <label class="control-label font">نام و نام خانوادگی</label>
                                <input asp-for="ComplaintUserName" class="form-control input-custom" />
                                <span asp-validation-for="ComplaintUserName" class="text-danger font"></span>
                            </div>
                            <div class="form-group col-6">
                                <label class="control-label font font">شماره تماس</label>
                                <input asp-for="ComplaintPhoneNumber" type="number" class="form-control input-custom" />
                                <span asp-validation-for="ComplaintPhoneNumber" class="text-danger font"></span>
                            </div>
                            <div class="form-group col-6">
                                <label class="control-label font">پست الکترونیک</label>
                                <input asp-for="ComplaintMail" type="email" class="form-control input-custom" />
                                <span asp-validation-for="ComplaintMail" class="font text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label class="control-label font">عنوان شکایت</label>
                                <input asp-for="ComplaintTitle" class="form-control input-custom" />
                                <span asp-validation-for="ComplaintTitle" class="text-danger font"></span>
                            </div>
                        </div>

                        <div class="form-group col-12">
                            <label class="control-label font">متن شکایت</label>
                            <textarea asp-for="ComplaintDescription" style="height: 300px" class=" input-custom form-control"></textarea>
                            <span asp-validation-for="ComplaintDescription" class="text-danger font"></span>
                        </div>




                        <div class="form-group col-3">
                        <!-- Sign up button -->
                        <button class="btn btn-outline-primary font btn-rounded mt-5 btn-block my-4 waves-effect z-depth-0" type="submit">ثبت شکایت</button>
                        </div>



                    </form>
                    <!-- Form -->

                </div>

            </div>
            <!-- Material form register -->
        </div>
    </div>
</div>