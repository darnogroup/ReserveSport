@model List<ShowCommentViewModel>
@foreach (var item in Model)
{
    <li class="media">
        <img class="d-flex mr-3" width="50" height="50" src="~/Images/@item.UserImage" alt="Generic placeholder image">
        <div class="media-body">
            <h5 class="mt-0 mb-2 font-weight-bold text-danger">@item.UserName</h5>
            <!--Review-->

            <p>
             @item.CommentText
            </p>
        </div>
    </li>
}