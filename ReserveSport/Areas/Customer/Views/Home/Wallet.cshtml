@model UserWalletViewModel
@{
    ViewData["Title"] = "کیف پول";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-4">
        <div class="card col-12">
            
            <div class="card-body">
                <h4 class="card-title font text-success">موجودی کیف پول</h4>
                <hr /><input type="hidden" asp-for="UserId" value="@ViewBag.Id" />
                <h5 class="font alert alert-success">@Model.Price.ToString("#,0")<span class="font">هزار تومان</span></h5>
                <hr/>
                <a  data-toggle="modal" data-target="#modalLoginForm"class="btn btn-sm btn-danger font text-white">شارژ کیف پول</a>
            </div>
            <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h4 class="modal-title w-100 font-weight-bold font">شارژ کیف پول</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body mx-3">
                            <div class="md-form mb-5">
                                <label data-error="wrong" data-success="right" class="font" for="defaultForm-email">مبلغ شارژ</label>
                                <input type="number" id="defaultForm-email" class="form-control validate">
                            </div>

                            
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button class="btn font btn-default">پرداخت از طریق درگاه</button>
                        </div>
                    </div>
                </div>
            </div>

          
        </div>
    </div>
</div>