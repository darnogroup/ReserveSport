@model EditReserveViewModel
@{
    ViewData["Title"] = "ویرایش سانس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row mt-5 font">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/Collection/Reserves/@Model.CollectionId">
                    سانس ها
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <h6 class="card-title">ویرایش سانس </h6>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                }
                <form asp-controller="Dashboard" asp-action="Edit" method="post">

                    <div class="row col-12">
                        <div class="form-group col-12">

                            <div class="form-group col-md-12">
                                <label>هزینه سانس</label>
                                <input type="number" asp-for="Price" class="form-control" placeholder="هزینه سانس را وارد کنید">

                            </div>
                        </div>
                        <div class="form-group col-6">
                            <label>ساعت شروع سانس:</label>
                            <div class="input-group clockpicker">
                                <input type="text" asp-for="StartTime" class="form-control" placeholder="ساعت شروع سانس">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-time"></span>
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="StartTime"></span>

                        </div>
                        <div class="form-group col-6">
                            <label>ساعت اتمام سانس:</label>
                            <div class="input-group clockpicker">
                                <input type="text" asp-for="EndTime" class="form-control " placeholder="ساعت اتمام سانس">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-time"></span>
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="EndTime"></span>
                            <input type="hidden" asp-for="CollectionId" />
                            <input type="hidden" asp-for="Id" />
                        </div>
                    </div>
                    <div class=" row col-12">

                        <div class="form-group col-6">
                            <label>انتخاب تاریخ  :</label>

                            <div class="input-group">
                                <div class="input-group-prepend">

                                </div>
                                <div class="flex-grow-1">
                                    <input asp-for="DayTime" type="text" class="form-control w-100" DatePicker="1">
                                </div>
                            </div>       <span class="text-danger" asp-validation-for="DayTime"></span>
                        </div>



                    </div>
                    <button type="submit" class="btn btn-primary submit">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>


