@model SmsGeneralViewModel
@{
    ViewData["Title"] = "تنظیمات پیامکی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">

            </div>
            <div class="card-body mx-5 pt-0">
                <h6 class="card-title mt-5">پیامک عمومی</h6>

                <form asp-controller="Sms" asp-action="General" method="post">

                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>فعالسازی مجموعه</label>
                            <input type="text" asp-for="ActiveCollection" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>کد فعالسازی</label>
                            <input type="text" asp-for="ActiveText" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>ثبت تیکت</label>
                            <input type="text" asp-for="AnswerText" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>گذر واژه موقت</label>
                            <input type="text" asp-for="TemporaryText" class="form-control">
                        </div>
                    </div>
                   
                    <button type="submit" class="btn btn-success submit">ذخیره</button>
                </form>
            </div>
        </div>
    </div>
</div>