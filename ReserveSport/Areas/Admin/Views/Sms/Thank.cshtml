@model SmsThankViewModel
@{
    ViewData["Title"] = "تنظیمات پیامکی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">

            </div>
            <div class="card-body mx-5 pt-0">
                <h6 class="card-title mt-5">پیامک تشکر</h6>

                <form asp-controller="Sms" asp-action="Thank" method="post">

                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>متن کاربر</label>
                            <input type="text" asp-for="NameText" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>متن تشکر</label>
                            <input type="text" asp-for="ThankText" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label> متن توضیح</label>
                            <input type="text" asp-for="DescriptionText" class="form-control">
                        </div>
                    </div>
                    
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>لینک سایت</label>
                            <input type="url" asp-for="SiteLink" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success submit">ذخیره</button>
                </form>
            </div>
        </div>
    </div>
</div>