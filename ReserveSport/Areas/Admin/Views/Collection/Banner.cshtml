@model List<ImageViewModel>
@{
    ViewData["Title"] = "گالری مجموعه";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div>
            <a asp-controller="Collection" asp-action="AddBanner" asp-route-id="@ViewBag.id" class="btn btn-sm btn-primary text-white">افزودن</a>

        </div>
    </div>  <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3" id="item_@item.Id">
                <img src="~/Images/@item.ImagePath" class="img-fluid img-thumbnail" style="width: 100%" height="80" />
                <hr />
                <button   onclick="RemoveImage('@item.Id')" 
                    class="btn btn-sm btn-danger text-white">پاک کردن</button>
            </div>
        }
    </div>
</div>