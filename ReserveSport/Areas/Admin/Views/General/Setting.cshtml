@model SettingViewModel
@{
    ViewData["Title"] = "تنظیمات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">

            </div>
            <div class="card-body mx-5 pt-0">
                <h6 class="card-title mt-5">تنظیمات</h6>

                <form asp-controller="General" asp-action="Setting" method="post">

                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>واتساپ</label>
                            <input type="text" asp-for="WhatsApp" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>اینستاگرام</label>
                            <input type="text" asp-for="Instagram" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>تلگرام</label>
                            <input type="text" asp-for="Telegram" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>یوتیوب</label>
                            <input type="text" asp-for="YouTube" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>زرین پال</label>
                            <input type="text" asp-for="ZarinPal" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>شماره سامانه پیامکی</label>
                            <input type="text" asp-for="SmsNumberSender" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>کد سامانه پیامکی</label>
                            <input type="text" asp-for="SmsApiCode" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>مالیات مجموعه های ورزشی</label>
                            <input type="text" asp-for="Salary" class="form-control">
                            <span class="text-info">مقدار را برحسب درصد وارد کنید</span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group mb-0 row">

                            <div class="col-lg-12">
                                <label class="col-form-label">کد نماد</label>
                                <textarea asp-for="Namad" id="maxlength-textarea" class="form-control" maxlength="200" rows="8" ></textarea>
                            </div>
                          
                        </div>
                    </div>  
                    <div class="col-sm-12">
                        <div class="form-group mb-0 row">

                            <div class="col-lg-12">
                                <label class="col-form-label">درباره سایت</label>
                                <textarea asp-for="About" id="maxlength-textarea" class="form-control" maxlength="200" rows="8" ></textarea>
                            </div>
                            
                        </div>
                    </div>  
                    <button type="submit" class="btn btn-success submit">ذخیره</button>
                </form>
            </div>
        </div>
    </div>
</div>