@model EditUserViewModel
@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/Admin/User">
                    کاربران
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <h6 class="card-title">ویرایش کاربر</h6>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                }
                <form asp-controller="User" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <img id="NewImg" src="~/images/@Model.UserImage" width="150" height="150" class="img-thumbnail mr-1 mb-2  rounded-circle showNewImage" />
                        <br />
                        <label for="imgUp" class="control-label ml-2 chooseImage">
                            انتخاب عکس<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download-cloud"><polyline points="8 17 12 21 16 17"></polyline><line x1="12" y1="12" x2="12" y2="21"></line><path d="M20.88 18.09A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.29"></path></svg>
                        </label>
                        <input type="file" asp-for="UserImageFile" class="d-none" id="imgUp" onchange="ChangeImage(this);" />
                        <input type="hidden" asp-for="UserImage" />
                        <input type="hidden" asp-for="OldPhoneNumber" />   <input type="hidden" asp-for="UserId" />
                    </div>
                    <input type="hidden" asp-for="OldRole"/>
                    <div class="col-sm-12">
                        <div class="form-group col-md-6">
                            <label>نام کاربر</label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="نام کاربر را وارد کنید">
                        </div>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                        <div class="form-group col-md-6">
                            <label>کد ملی</label>
                            <input type="text" asp-for="NationalCode" class="form-control" placeholder="کد ملی را وارد کنید">
                        </div>
                        <span class="text-danger col-md-6" asp-validation-for="NationalCode"></span>
                        <div class="form-group col-md-6">
                            <label>شماره موبایل</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="شماره موبایل را وارد کنید">
                        </div>
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        <div class="form-group col-md-6">
                            <label asp-for="Role">نقش کاربر</label>
                            <select class="form-control" asp-for="Role" asp-items="Html.GetEnumSelectList<EnumRole>()">
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="form-check form-check-flat form-check-primary">
                            <label class="form-check-label">
                                <input type="checkbox" asp-for="IsActive" class="form-check-input">
                                فعالسازی حساب کاربری
                                <i class="input-frame"></i>
                            </label>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>
